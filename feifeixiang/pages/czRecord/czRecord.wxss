@import "../../common.wxss";
.detail1{
    display: inline-block;
    width: 30%;
    vertical-align: middle;

}
.detail2{
    display: inline-block;
    width: 70%;
    vertical-align: middle;
    padding-left: 20rpx;
    box-sizing:border-box;
    height: 180rpx;
    position: relative;
}
.detail{
    margin-bottom: 20rpx;
}
.img{
    width: 100%;
    height: 180rpx;
}
.date{
    color: #8d8d8d;
    margin-top: 20rpx;
}
.count{
    color: #8d8d8d;
    position: absolute;
    bottom: 0;
}
.bottom{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-top: 1px solid #e5e5e5;
}
.swiper-box-item{
    background-color: white;
    padding:  20rpx 3.5% 0 3.5%;
    margin-top: 20rpx;
}
.swiper-box-item:first-child{
    margin-top: 0;
}
.left{
    width: 50%;
    display: inline-block;
}
.right{
    width: 50%;
    display: inline-block;
    text-align: right;
}
.price,.hongbao{
    color: #fe782f;
}