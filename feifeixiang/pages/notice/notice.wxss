@import "../../wxParse/wxParse.wxss";

page{
    width: 100%;
    height: 100%;
    background-color: #f5f5f5;
}
.content{
    background-color: white;
    padding: 20rpx 3.5%;
    margin-top: 20rpx;
}
.content:first-child{
    margin-top: 0;
}
.title{
    border-left: 10rpx solid #6ad266;
    padding-left: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
}
.detail{
    border-top: 1rpx solid #e5e5e5;
    margin-top: 20rpx;
    padding-top: 20rpx;
}
.text{
    line-height: 40rpx;
    color: #8d8d8d;
}