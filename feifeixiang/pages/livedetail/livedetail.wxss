#topBg{
    width: 100%;
}
#title{
    width: 93%;
    margin: 20rpx auto;
}
#title_text{
    font-weight: bold;
    font-size: 30rpx;
    color: #585858;
}
#title_date{
    color: #8d8d8d;
    font-size: 30rpx;
    margin-top: 20rpx;
}
#toDetail{
    background-color: #fe782f;
    color: white;
    border-radius: 0 10px 10px 0;
    display: inline-block;
    padding: 10rpx 20rpx 10rpx 3.5%;
}
.zhubo{
    background-color: #6ad266;
    color: white;
    border-radius:  10px 0 0 10px ;
    display: inline-block;
    padding: 10rpx 3.5% 10rpx 20rpx;
    position: absolute;
    right: 0;
}
#top{
    position: relative;
}
#main{
    margin-top: 20rpx;
    padding:0 3.5% 20rpx 3.5%;
}
.touxiang{
    width: 95rpx;
    height: 95rpx;
    border-radius: 50%;
    display: block;
}
.touxiang2{
    width: 95rpx;
    height: 95rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
}
.name{
    font-weight: bold;
    font-size: 30rpx;
}
.date{
    margin-top: 18rpx;
}
.date_left{
    display: inline-block;
    color: #8d8d8d;
}
.date_right{
    display: inline-block;
    color: #6ad266;
    margin-left: 50rpx;
}
.left{
    display: inline-block;
    vertical-align: top;
    width: 20%;
}
.right{
    display: inline-block;
    vertical-align: top;
    width: 80%;
    padding-top: 10rpx;
}
.zanshang{
    display: inline-block;
    background-color: #fe782f;
    color: white;
    padding: 5rpx 10rpx;
    margin-top: 20rpx;
    border-radius: 10px;
}
.miaoshu{
    margin-top: 20rpx;
}
.photos{
    display: flex;
    flex-flow:row wrap;
    width: 92%;
}
.photoView{
    width:30%;
    margin-top: 20rpx;
}
.photoView+.photoView{
    margin-left: 5%;
}
.photoView:nth-child(3n+1){
    margin-left: 0;
}
.photo{
    width:100%;
    height:156rpx;
}
.content{
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1px solid #e5e5e5;
}
.pinglun{
    width: 80rpx;
    height: 54rpx;
    vertical-align: bottom;
}
.dianzan{
    width: 54rpx;
    height: 54rpx;
    margin-left: 40rpx;
    vertical-align: bottom;
}
.bottom{
    text-align: right;
    margin-top: 20rpx;
}
.zannum{
    color: #8d8d8d;
    font-size: 30rpx;
    vertical-align: bottom;
}
.pingjia{
    background-color: #e5e5e5;
    padding: 20rpx;
    border-radius: 10px;
}
.dashang{
    background-color: #6ad266;
    padding: 20rpx;
    border-radius: 10px;
    margin-top: 20rpx;
}
.sanjiao{
    width: 0;
    height: 0;
    margin-left: 46rpx;
    border-left: 20rpx solid transparent;
    border-right: 20rpx solid transparent;
    border-bottom: 23rpx solid #e5e5e5;
}
.button{
    color: white;
    background-color: #fe782f;
    width: 20%;
    display: inline-block;
    height: 60rpx;
    margin-left: 4%;
    line-height: 60rpx;
}
.hover{
    opacity: 0.7;
}
#bottom{
    background-color: #e5e5e5;
    text-align: center;
    padding: 20rpx 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}
.input{
    width: 70%;
    display: inline-block;
    background-color: white;
    line-height: 60rpx;
    height: 60rpx;
    text-align: left;
    box-sizing: border-box;
    padding-left: 10rpx;
}
.otherInput{
    width: 50%;
    display: inline-block;
    background-color: white;
    line-height: 60rpx;
    height: 60rpx;
    text-align: left;
    padding-left: 20rpx;
    border: 2px solid #fe782f;
    border-radius: 10px;
    vertical-align: middle;
}
.showDashang{
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    z-index: 10;
}
.show{
    display: none;
}
.box{
    background-color: white;
    width:70%;
    margin:50% auto 0 auto;
    border-radius: 10px;
    position: relative;
    padding: 40rpx
}
.del{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}
.up{
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 20rpx;
}
.down{
    display: flex;
    flex-flow: wrap row;
}
.down2{
    padding-top: 20rpx;
}
.money{
    width: 30%;
    margin-right: 5%;
    border: 2px solid #fe782f;
    box-sizing: border-box;
    border-radius: 5px;
    margin-top: 20rpx;
    padding: 16rpx 0;
}
.money:nth-child(3n){
    margin-right: 0;
}
.other{
    color: #6ad266;
    font-size: 30rpx;
    margin-top: 40rpx;
}
.on{
    color: white;
    background-color: #fe782f;
}
.button2{
    color: white!important;
    background-color: #6ad266!important;
    width: 30%;
    display: inline-block;
    height: 60rpx;
    margin-left: 10%;
    line-height: 60rpx;
    vertical-align: middle;
}
.fuhao{
    color: #fe782f;
    font-weight: bold;
    font-size: 30rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 20rpx;
}
.input2{
    display: inline-block;
    vertical-align: middle;
    width: 70%;
    color: #fe782f;
}
.hui{
    background-color: #8d8d8d!important;
}
.video{
    width: 100%;
    height: 100%;
}
.video_view{
    width: 440rpx;
    height: 440rpx;
}