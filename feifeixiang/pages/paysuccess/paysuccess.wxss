#all{
    display: block;
    overflow: hidden;
    font-size: 26rpx;
    color: #8d8d8d;
    padding-bottom: 100rpx;
}
#first{
    background-color: #6ad266;
    height: 320rpx;
    width: 100%;
    text-align: center;
}
.logo{
    width: 180rpx;
    height: 180rpx;
    margin-top: 30rpx;
}
.pay{
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 20rpx;
    color: white;
    letter-spacing: 10rpx;
    margin-left: 10rpx;
}
.title_text{
    font-size: 30rpx;
    font-weight: bold;
    border-left: 10rpx solid #6ad266;
    padding-left: 20rpx;
}
.margin1{
    background-color: white;
    padding: 20rpx 3.5% 20rpx 3.5%;
}
.margin2{
    margin-top: 20rpx;
    background-color: white;
    padding: 0 3.5% 0 3.5%;
}
.margin3{
    background-color: white;
    padding: 0 3.5% 0 3.5%;
}
.detail{
    border-top: 1rpx solid #e5e5e5;
    margin-top: 20rpx;
}
.img{
    width: 180rpx;
    height: 180rpx;
    margin-top: 20rpx;
}
.title{
    font-size: 30rpx;
    color: #585858;
    font-weight: bold;
    margin-top: 20rpx;
}
.orderNo{
    margin-top: 20rpx;
}
.inline1,.inline2{
    display: inline-block;
    width: 50%;
}
.inline2{
    text-align: right;
}
.fuhao{
    font-size: 24rpx;
}
.price{
    color: #fe782f;
    font-size: 30rpx;
    font-weight: bold;
}
.yizhifu{
    color: #6ad266;
}
.content{
    line-height: 80rpx;
    border-top: 1rpx solid #e5e5e5;
    height: 80rpx;
    border-bottom: 1px solid #e5e5e5;
}
.content:first-child{
    border-top: 0;
    border-bottom: 0;
}
#sure{
    background-color: #6ad266;
    color: white;
    width: 100%;
    height: 100rpx;
    line-height:100rpx;
    border-radius: 0;
    position: fixed;
    bottom: 0;
}
#share{
    background-color: #6ad266;
    color: white;
    width: 42%;
    height: 60rpx;
    line-height:60rpx;
    margin-top: 20rpx;
}
.button-hover{
    opacity: 0.5;
}
.margin3_content{
    background-color: #e5e5e5;
    color: #6ad266;
    text-align: center;
    padding: 20rpx;
}
.red{
    color: #fe782f;
}
.share_view{
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    z-index: 10;
}
.share_img{
    width: 100%;
}
.content2{
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
    color: #8d8d8d;
    position: relative;
}
.name{
    color: #8d8d8d;
}
.num{
