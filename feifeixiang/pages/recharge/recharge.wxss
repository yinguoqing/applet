page{
    width: 100%;
    height: 100%;
}
#all{
    display: block;
    min-height: 100%;
    min-width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
}
#top{
    display: flex;
    flex-flow: row wrap;
    width: 93%;
    margin: 0 auto;
}
.cube{
    width: 30%;
    margin-right: 5%;
    margin-top: 20rpx;
    border: 1px solid #6ad266;
    box-sizing: border-box;
    padding: 20rpx;
    box-sizing: border-box;
}
.cube:nth-child(3n){
    margin-right: 0;
}
.tip{
    color: #fe782f;
}
#money{
    width: 80%;
    display: inline-block;
    vertical-align: middle;
}
.other{
    display: inline-block;
    vertical-align: middle;
    width: 20%;
}
#other{
    border: 1px solid #6ad266;
    box-sizing: border-box;
    width: 93%;
    margin: 20rpx auto;
    padding: 20rpx;
    box-sizing: border-box;
}
.recharge{
    color: white;
    background-color: #6ad266;
    width: 93%;
}
.current{
    background-color: #6ad266;
}
.color{
    color: white;
}
.disabled{
    background-color: #8d8d8d !important;
}
.button-hover{
    opacity: 0.5;
}
.yue{
    color: #fe782f;
}
#yue{
    text-align: center;
    width: 93%;
    margin: 0 auto;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 90rpx;
}