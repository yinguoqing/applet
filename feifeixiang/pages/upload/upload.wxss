@import "../../loading.wxss";
page{
    height: 100%;
    width: 100%;
}
#all{
    display: block;
    min-height: 100%;
    min-width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
    font-size: 26rpx;
    color: #585858;
}
#first{
    margin-top: 40rpx;
    text-align: center;
    color: #fe782f;
    font-size: 30rpx;
}
#second{
    margin-top: 40rpx;
    text-align: center;
}
.star{
    width: 45rpx;
}
.inline{
    display: inline-block;
    margin-left: 12rpx;
}
.img{
    width: 80rpx;
}
.img2{
    width: 40rpx;
}
.btn{
    color: white;
    background-color: #6ad266;
    width: 93%;
    margin-top: 60rpx;
}
.delBtn{
    color: white;
    background-color: #fe782f;
    width: 100%;
    margin-top: 15rpx;
}
.textarea{
    width: 93%;
    height: 200rpx;
    margin: 20rpx auto 0 auto;
    background-color: white;
    padding: 3%;
    box-sizing: border-box;
}
.num{
    color: #fe782f;
}
.placeholder{
    position: absolute;
    top: 208rpx;
    left: 6.5%;
    color: #8d8d8d;
    font-size: 24rpx;
}
.zishu{
    background-color: white;
    width: 93%;
    margin: 0 auto;
    text-align: right;
    line-height: 80rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.choosePhoto{
    background-color: white;
    padding: 20rpx 20rpx 0 20rpx;
    width: 22%;
    height: 160rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    border: 1px solid #e5e5e5;
}
.chooseVideo{
    background-color: white;
    padding: 20rpx 20rpx 0 20rpx;
    width: 22%;
    height: 160rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    border: 1px solid #e5e5e5;
}
.imgView{
    text-align: center;
    margin-top: 20rpx;
}
.imgView2{
    text-align: right;
}
.videoView{
    text-align: center;
    margin-top: 36rpx;
}
.videoView2{
    text-align: right;
    margin-top: 6rpx;
}
.button-hover{
    opacity: 0.5;
}
.photoView{
    width: 30%;
    box-sizing: border-box;
    margin-top: 20rpx;
    margin-right: 5%;
    position: relative;
}
.photoView:nth-child(3n){
    margin-right: 0!important;
}
.photo{
    width: 100%;
    height: 160rpx;
}
#photos{
    display: flex;
    flex-flow: row wrap;
    width: 93%;
    margin: 20rpx auto;
}
.del{
    width: 40rpx;
    position: absolute;
    right: -13rpx;
    top: -13rpx;
}
.textarea-placeholder{
    color: #8d8d8d;
}
.video{
    width: 100%;
}
.videoBox{
    position: relative;
}
#margin{
    margin-right: 5%!important;
}